<script type="text/javascript">

    function filterGrid() {
        var genre,
        title,
        fromDate,
        todate,
        $comboBox,
        $textBox;

        debugger;

        comboBox = $('#combobox').data('kendoComboBox').value();
        textBox = $('#textbox').val();
        fromDate = $('#datepicker1').data('kendoDatePicker').value();
        toDate = $('#datepicker2').data('kendoDatePicker').value();

        genre = comboBox ? comboBox : ' ';
        title = textbox ? textBox : ' ';

        return { genre: genre, title: title, fromDate: fromDate, toDate: toDate };
    }

    $(function () {
                
        $(document).delegate('#btn-reset-books-grid', 'click', function () {
            $('#grid-books-raport').data('kendoGrid').dataSource.read();
            $('#grid-books-raport').data('kendoGrid').refresh();

        })
    })

</script>

