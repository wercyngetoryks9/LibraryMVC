        })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model => model.Id(borrow => borrow.BorrowId))
            .Read(read => read.Action("UsersIndex", "Borrow"))
            .PageSize(20)
